.authen{
  padding: 0 30rpx;
    box-sizing: border-box;
}
.authen-m{
  margin-bottom: 40rpx;
}
.authen-img-tit{
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}
.authen-img-h{
  width: 140rpx;
  height:140rpx;
  line-height: 140rpx;
  text-align: center;
  border:1rpx dashed #D9D9D9;
  font-size: 56rpx;
  font-weight: bold;
}
.authen-dialog{
  position: fixed;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    overflow: auto;
    margin: 0;
    z-index: 4;
}
.authen-model{
  position: fixed;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    opacity: .5;
    background: #000;
    z-index: 2;
}
.authen-dialog-cen{
   width: 92%;
   position: relative;
    margin: 0 auto;
    margin-top: 15%;
   border-radius: 2px;
  font-size: 28rpx;
    box-sizing: border-box;
    background: #fff;
    padding: 10rpx 20rpx;
}
.authen-dialog-tit{
  font-size: 36rpx;
  font-weight: bold;
}
.authen-dialog-main{
  margin-top: 40rpx;
}
.authen-dialog-m{
  margin-bottom: 20rpx;
}
.authen-dialog-b{
  padding: 6rpx 0;
}
.authen-dialog-foot{
  margin-top: 50rpx;
  margin-bottom: 80rpx;
}
.authen-dialog-foot view{
  text-align: center;
  height: 86rpx;
  line-height: 86rpx;
  border-radius: 10rpx;
  font-size: 30rpx;
}
.authen-dialog-save{
  height: 86rpx;
  background: rgb(94, 108, 210);
  color: white;
  margin-bottom: 20rpx;
}
.authen-dialog-con{
  border:1rpx solid rgb(94, 108, 210);
  color: rgb(94, 108, 210);
}