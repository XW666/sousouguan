/**index.wxss**/
page{
  height: 100%;
  width: 100%;
  background: #fbfbfb;
}
.container{
  padding: 0 30rpx;
  box-sizing: border-box;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 28rpx;
  
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
.user-ul{
  width: 100%;
  display: flex;
  
  align-items: center;

}
.user-li{
  flex: 1;
  text-align: center;
}
.user-li-m{
  display: inline-block;
  width: 140rpx;
  height: 06rpx;
  line-height: 60rpx;
  font-weight: bold;
}
.user-cen{
background-color: #fff;
box-shadow: 0px 1px 5px 0px #E8E8E8;
border-radius: 4px;
padding: 20rpx;
width: 100%;
box-sizing: border-box;
margin: 20rpx;
margin-bottom: 40rpx;
}
.user-cen-m{
  width: 100%;
  display: flex;
  padding:  0 20rpx;
  margin-bottom: 30rpx;
}
.user-img{
  width: 80rpx;
  height: 80rpx;
}
.user-img image{
  width: 100%;
  height: 100%;
}
.user-tit{
  flex: 1;
  padding-left: 20rpx;
}
.user-h{
  padding-top: 30rpx;
  border-top: 2rpx solid #E8E8E8
}

